{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "tests"]
}